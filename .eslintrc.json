{
	"env":
	{
        "browser": true,
        "commonjs": true,
		"es2020": true,
		"mocha": true
    },
	"extends":
	[
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
	"parserOptions":
	{
        "ecmaVersion": 11
    },
	"plugins":
	[
        "@typescript-eslint"
    ],
	"rules":
	{
		"indent":
		[
            "error",
            "tab"
		],
		"brace-style":
		[
			"error",
			"allman",
			{"allowSingleLine": true}
		],
		"linebreak-style":
		[
            "error",
            "windows"
        ],
		"quotes":
		[
            "error",
            "double"
        ],
		"semi":
		[
            "error",
            "always"
        ]
    }
}